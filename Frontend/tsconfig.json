{
  "compilerOptions": {
    "target": "es5",                       // ECMAScript target version
    "module": "commonjs",                  // Module code generation method
    "moduleResolution": "node",            // Modern module resolution strategy
    "lib": ["dom", "esnext"],              // Library files to include
    "allowJs": true,                      // Allows JavaScript files to be compiled
    "skipLibCheck": true,                 // Skip type checking of declaration files
    "strict": true,                       // Enable all strict type-checking options
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing in file names
    "noEmit": true,                       // Disable output files (useful for type checking only)
    "esModuleInterop": true,              // Enable interoperability between CommonJS and ES Modules
    "allowSyntheticDefaultImports": true, // Allow default imports from non-default-exporting modules
    "resolveJsonModule": true,            // Enable importing JSON files
    "baseUrl":  "./src",                      // Base directory for module resolution
    "paths": {                            // Path mappings for module resolution
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@lib/*": ["lib/*"],                       // Map @lib/* to src/lib/*
    },
    
    "jsx": "react-jsx"                    // JSX code generation
  },
  "include": [
    "src/**/*"                            // Files to include in the compilation
,   ],
  "exclude": [
    "node_modules",                       // Files to exclude from the compilation
    "**/*.test.ts"
  ]
  
}
